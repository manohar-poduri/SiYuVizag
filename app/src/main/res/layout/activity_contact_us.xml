<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactUs">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool"
            android:layout_width="match_parent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="#ffa500"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="37dp"
                android:onClick="homeButton"
                app:srcCompat="@drawable/backarrow" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

<!--
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:onClick="home"
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_home_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>
-->


        </androidx.appcompat.widget.Toolbar>

        <Button
            android:id="@+id/contactus"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green"
            android:text="Contact US"
            android:textColor="#ffa500"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/tool"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:padding="15dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a10"
            android:id="@+id/textv"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_below="@id/contactus"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editborder"
            android:inputType="textMultiLine"
            android:layout_below="@id/contactus"
            android:layout_toRightOf="@id/textv"
            android:layout_margin="10dp"
            android:padding="10dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:id="@+id/phone"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_below="@+id/textv"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/phone1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/phone"
            android:background="@drawable/editborder"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/email"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_below="@id/phone"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/editborder"
            android:layout_toRightOf="@id/email"
            android:layout_below="@id/phone1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message:"
            android:padding="10dp"
            android:id="@+id/textv1"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_below="@id/email"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/editborder"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:layout_below="@id/email1"
            android:layout_toRightOf="@id/textv1"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/button_green"
            style="@style/button_text"
            android:id="@+id/but1"
            android:text="@string/a9"
            android:textColor="#ffa500"
            android:textStyle="bold"
            android:layout_below="@id/textv1"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            />
    </RelativeLayout>

</RelativeLayout>